<article class="testimonial-node-1">      
   <div class="testimonial-content">
      <div class="testimonial-image">
         {{ fields.field_testimonial_avatar.content }}
      </div> 
      <div class="testimonial-content-inner">
         <div class="testimonial-quote">{{ fields.body.content|striptags|trim }}</div>
         <div class="testimonial-meta">
            <div class="testimonial-information">
               <span class="testimonial-name">{{ fields.field_testimonial_name.content }},&nbsp;</span>
               <span class="testimonial-job">{{ fields.field_testimonial_job.content }}</span>
            </div>
         </div>
         <div class="quote-icon"><i class="fi flaticon-quote"></i></div>
      </div>
   </div>
</article>
  