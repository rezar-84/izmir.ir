{% if attributes -%}
  <div{{ attributes }}>
{% endif %}
	
{% if title %}
	<h3>{{ title }}</h3>
{% endif %}

<div class="map-layout map-layout-wrapper half_map-wrapper clearfix">
	<div class="half_map-row views-map-one">
		
		<div class="half_map-col col-map main-map-wrapper">
			<div class="map-full-height map-sticky listing-map-sticky">
			  <div id="listing-main-map" class="listing-main-map"></div>
			</div>
		</div>

		<div class="half_map-col col-results main-listing-wrapper">
			<div class="content-inner">
				
				<div class="lt-map-action">
				  	<div class="control-search"><a class="btn-theme-small" href="#">{{ "Search Filters"|t }}</a></div>
				  	<div class="control-map">
					 	<div class="control-hover-show-map pretty p-switch p-fill">
							<input type="checkbox" id="hover-show-map"/>
							<div class="state">
							 	<label>{{'Hover Show Map'|t}}</label>
							</div>
					 	</div>
					 	<div class="control-reset-map"><a href="#" class="gva-reset-map btn-theme-small">{{'Reset Map'|t}}</a></div>
					 	<div class="control-current-map"><a href="#" class="gva-current-map"></a></div>
				  	</div>  
				</div> 

				<div class="listing-items gva-view-grid-inner lg-block-grid-{{ class_grid.items_lg }} md-block-grid-{{class_grid.items_md}} sm-block-grid-{{class_grid.items_sm}} xs-block-grid-{{class_grid.items_xs}}" data-drupal-views-infinite-scroll-content-wrapper-gvaloadmorelistings>
				  	{% set i = 0 %}
				  	{% for row in rows %}
						<div class="item-columns">
						  <div class="listing-item-wrapper" data-marker="{{i}}">{{ row.content|raw }}</div>
						</div>
				  		{% set i = i + 1 %}
				  	{% endfor %}
				</div>
				
			</div>	
		</div>

	</div>	
	 
</div>  
  
{% if attributes -%}
	 </div>
{% endif %}


<script type="text/javascript">
  jQuery(document).ready(function(){
	 map_init();
  });
</script>